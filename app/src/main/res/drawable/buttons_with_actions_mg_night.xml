<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/background_input_history_color_night">
    <item
        android:state_enabled="true">
        <ripple
            android:color="@color/background_input_history_color_night">
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:width="@dimen/stroke_width"
                        android:color="@color/red_night" />
                    <gradient
                        android:angle="45"
                        android:endColor="@color/background_input_history_color_night"
                        android:centerColor="@color/green_night"
                        android:startColor="@color/green_night"
                        android:type="linear"/>
                    <padding
                        android:left="@dimen/paddings_zero"
                        android:top="@dimen/paddings_zero"
                        android:right="@dimen/paddings_zero"
                        android:bottom="@dimen/paddings_zero" />
                    <size
                        android:width="@dimen/circle_width"
                        android:height="@dimen/circle_height" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>