<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_day</item>
        <item name="colorPrimaryVariant">@color/red_erase_day</item>
        <item name="colorOnPrimary">@color/background_input_history_color_day</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_day</item>
        <item name="colorSecondaryVariant">@color/red_center_day</item>
        <item name="colorOnSecondary">@color/red_erase_day</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- User element color -->
        <item name="colorAccent">@color/green_day</item>
    </style>

    <style name="Day" parent="Theme.Calculator">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_day</item>
        <item name="colorPrimaryVariant">@color/red_center_day</item>
        <item name="colorOnPrimary">@color/background_input_history_color_day</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_day</item>
        <item name="colorSecondaryVariant">@color/red_center_day</item>
        <item name="colorOnSecondary">@color/red_erase_day</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- User element color -->
        <item name="colorAccent">@color/green_day</item>
        <!-- Selected text color-->
        <item name="android:textColorHighlight">@color/red_day</item>
    </style>

    <style name="Night" parent="Theme.Calculator">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_night</item>
        <item name="colorPrimaryVariant">@color/red_erase_night</item>
        <item name="colorOnPrimary">@color/background_input_history_color_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_night</item>
        <item name="colorSecondaryVariant">@color/red_center_night</item>
        <item name="colorOnSecondary">@color/red_erase_night</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- User element color -->
        <item name="colorAccent">@color/green_night</item>
        <!-- Selected text color-->
        <item name="android:textColorHighlight">@color/red_night</item>
    </style>
</resources>