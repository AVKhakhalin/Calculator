<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?colorOnPrimary">
    <item
        android:state_enabled="true">
        <ripple
            android:color="?colorOnPrimary">
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:width="@dimen/stroke_width"
                        android:color="?colorSecondary" />
                    <gradient
                        android:angle="45"
                        android:endColor="?colorOnPrimary"
                        android:centerColor="?colorSecondaryVariant"
                        android:startColor="?colorPrimary"
                        android:type="linear"/>
                    <padding
                        android:left="@dimen/paddings_zero"
                        android:top="@dimen/paddings_zero"
                        android:right="@dimen/paddings_zero"
                        android:bottom="@dimen/paddings_zero" />
                    <size
                        android:width="@dimen/circle_width"
                        android:height="@dimen/circle_height" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>