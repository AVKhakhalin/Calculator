<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?colorOnPrimary">
    <item
        android:state_enabled="true">
        <ripple
            android:color="?colorOnPrimary">
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="@dimen/stroke_width"
                        android:color="?colorPrimary" />
                    <corners
                        android:radius="@dimen/coners_radius" />
                    <gradient
                        android:angle="45"
                        android:endColor="?colorOnPrimary"
                        android:centerColor="?colorSecondary"
                        android:startColor="?colorSecondary"
                        android:type="linear"/>
                    <padding
                        android:left="@dimen/paddings_zero"
                        android:top="@dimen/paddings_zero"
                        android:right="@dimen/paddings_zero"
                        android:bottom="@dimen/paddings_zero" />
                    <size
                        android:width="@dimen/green_yellow_width"
                        android:height="@dimen/green_yellow_height" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>