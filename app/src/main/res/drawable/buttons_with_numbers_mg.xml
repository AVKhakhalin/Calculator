<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/BackgroundInputHistory_color">
    <item
        android:state_enabled="true">
        <ripple
            android:color="@color/BackgroundInputHistory_color">
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:width="1dp"
                        android:color="@color/green" />
                    <gradient
                        android:angle="45"
                        android:endColor="@color/BackgroundInputHistory_color"
                        android:centerColor="#D53900"
                        android:startColor="@color/red"
                        android:type="linear"/>
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        />
                    <size
                        android:width="30dp"
                        android:height="30dp"
                        />
                </shape>
            </item>
        </ripple>
    </item>
    <item
        android:state_enabled="false">
        <shape
            android:shape="oval">
            <corners
                android:radius="@dimen/coners_radius" />
            <gradient
                android:angle="45"
                android:endColor="@color/BackgroundInputHistory_color"
                android:centerColor="#D53900"
                android:startColor="@color/red"
                android:type="linear"/>
        </shape>
    </item>
</selector>